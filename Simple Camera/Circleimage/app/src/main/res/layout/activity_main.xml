<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ffffff">



    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="4dp"
        android:src="@drawable/d1"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="07dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/imageView"
        android:text="Lexi wrote on june 15 at 12:30pm)"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#ef5454" />

    <TextView
        android:id="@+id/textViewShortDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginLeft="07sp"
        android:layout_marginTop="5sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/imageView"
        android:text="Your singing is noting less than mesmirising!!"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:id="@+id/img2"
        android:src="@drawable/m4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:textSize="10dp"
            android:textColor="#5e5b5b"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="50dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/i"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:textSize="10dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="200dp"
            android:drawableLeft="@drawable/i2"
            android:text="Comment"
            android:textColor="#5e5b5b" />

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="4dp"
        android:src="@drawable/d3"/>

    <TextView
        android:id="@+id/textViewTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:text="Justin wrote on june 25 at 01:30pm)"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#183fda" />

    <TextView
        android:id="@+id/textViewShortDesc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102sp"
        android:layout_marginTop="38sp"
        android:textColor="#000000"
        android:text="Dance is the hidden language of the soul. ... !!!!! !!"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <ImageView
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"
            android:id="@+id/img3"
            android:src="@drawable/d4"/>
    </RelativeLayout>




</LinearLayout>